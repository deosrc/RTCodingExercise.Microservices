@using System.Globalization
@model IEnumerable<Catalog.Domain.Plate>

@{
    ViewData["Title"] = "Plates";
}

<h1 class="h1">Plates</h1>

<a asp-action="Add" class="btn btn-secondary">Add Plate</a>

<table class="table table-responsive table-striped table-hover">
    <thead>
        <tr>
            <th>Registration</th>
            <th>Purchase Price</th>
            <th>Sale Price</th>
            <th>Letters</th>
            <th>Numbers</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Registration</td>
                <td><money value="@p.PurchasePrice" /></td>
                <td><money value="@p.SalePrice" /></td>
                <td>@p.Letters</td>
                <td>@p.Numbers</td>
            </tr>
        }
    </tbody>
</table>